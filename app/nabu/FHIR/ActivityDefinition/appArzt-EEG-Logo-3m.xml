                <expression value="3 months"/> 
            </dynamicValue>
            <dynamicValue> 
                <path value="timingTiming.event"/>
                <language value="application/xquery"/>
                <expression value="3 * xs:dayTimeDuration('P30D')"/> 
            </dynamicValue>
            <dynamicValue> 
